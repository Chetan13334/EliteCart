NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/elitecart?retryWrites=true&w=majority&appName=EliteCart
MONGODB_DB_NAME=elitecart
MONGODB_MAX_POOL_SIZE=20
MONGODB_SERVER_SELECTION_TIMEOUT_MS=10000
MONGODB_SOCKET_TIMEOUT_MS=45000
# Local fallback:
# MONGODB_URI=mongodb://127.0.0.1:27017/elitecart

CLIENT_ORIGIN=http://localhost:5173
# Example for multiple origins:
# CLIENT_ORIGIN=http://localhost:5173,https://your-frontend-domain.com

JWT_ACCESS_SECRET=replace_with_strong_access_secret
JWT_REFRESH_SECRET=replace_with_strong_refresh_secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

REFRESH_COOKIE_NAME=elitecart_refresh_token
# REFRESH_COOKIE_DOMAIN=localhost
